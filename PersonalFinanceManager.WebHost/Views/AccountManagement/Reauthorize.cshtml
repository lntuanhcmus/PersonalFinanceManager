<form id="reauthorizeForm" method="post" action="@Url.Action("Reauthorize", "AccountManagement")" style="display: none;">
    @Html.AntiForgeryToken()
    <button id="reauthorizeBtn" type="submit" style="display: none;"></button>
</form>

<div class="loading-container" style="text-align: center; padding: 20px;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Đang xử lý...</span>
    </div>
    <p>Đang tái xác thực, vui lòng đợi...</p>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('reauthorizeForm');
            if (form) {
                setTimeout(() => {
                    form.submit(); // Gửi form trực tiếp
                }, 1000);
            } else {
                console.error('Form reauthorizeForm không tồn tại');
            }
        });
    </script>
}
@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container my-5">
    <h1 class="text-center mb-4 animate__animated animate__fadeIn">Liên hệ với chúng tôi</h1>
    <div class="card shadow rounded-4 p-4">
        <div class="card-body">
            <p class="lead text-center">Chúng tôi luôn sẵn sàng hỗ trợ bạn! Hãy liên hệ qua thông tin dưới đây hoặc gửi yêu cầu qua biểu mẫu.</p>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <h3 class="mb-3">Thông tin liên hệ</h3>
                    <p><i class="fas fa-envelope mr-2"></i> <a href="mailto:support@finsnap.com">support@finsnap.com</a></p>
                    <p><i class="fas fa-globe mr-2"></i> <a href="https://finsnap.com" target="_blank">finsnap.com</a></p>
                    <div class="social-icons mt-3">
                        <a href="https://facebook.com" target="_blank" class="mr-3"><i class="fab fa-facebook-f fa-2x"></i></a>
                        <a href="https://twitter.com" target="_blank" class="mr-3"><i class="fab fa-twitter fa-2x"></i></a>
                        <a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin-in fa-2x"></i></a>
                    </div>
                </div>
                <div class="col-md-6">
                    <h3 class="mb-3">Gửi yêu cầu</h3>
                    <form asp-action="Contact" method="post" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="Name">Họ và tên</label>
                            <input class="form-control" id="Name" name="Name" placeholder="Nhập họ và tên" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Email">Email</label>
                            <input class="form-control" id="Email" name="Email" type="email" placeholder="Nhập email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Message">Tin nhắn</label>
                            <textarea class="form-control" id="Message" name="Message" rows="5" placeholder="Nội dung yêu cầu" required></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Gửi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
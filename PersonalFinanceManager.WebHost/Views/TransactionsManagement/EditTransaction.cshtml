@model PersonalFinanceManager.WebHost.Models.DetailTransactionViewModel

<div class="row mb-3">
    <div class="col">
        <h2 class="text-primary">Sửa giao dịch</h2>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="EditTransaction" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="TransactionId" />
            <div class="mb-3">
                <label asp-for="TransactionTime" class="form-label">Ngày giao dịch</label>
                <div class="input-group">
                    <input asp-for="TransactionTime" class="form-control datetimepicker" required />
                    <span class="input-group-text">
                        <i class="bi bi-calendar"></i>
                    </span>
                </div>
                <div class="invalid-feedback">Vui lòng chọn ngày giao dịch.</div>
            </div>
            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Số tiền (VND)</label>
                <input asp-for="Amount" class="form-control" required type="number" step="1" placeholder="VD: 500000" />
                <div class="invalid-feedback">Vui lòng nhập số tiền (chỉ nhập số, không cần VND).</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Loại giao dịch</label>
                <select asp-for="TransactionTypeId"
                        asp-items="Model.TransactionTypes"
                        class="form-control">
                    <option value="">-- Chọn loại giao dịch --</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Danh mục</label>
                <select asp-for="CategoryId"
                        asp-items="Model.Categories"
                        class="form-control">
                    <option value="">-- Chọn danh mục --</option>
                </select>
            </div>
            
            <div class="mb-3">
                <label asp-for="SourceAccount" class="form-label">Người gửi/Tài khoản nguồn</label>
                <input asp-for="SourceAccount" class="form-control" placeholder="VD: Nguyen Van A" />
            </div>
            <div class="mb-3">
                <label asp-for="RecipientAccount" class="form-label">Tài khoản người hưởng</label>
                <input asp-for="RecipientAccount" class="form-control" placeholder="VD: Your VCB Account" />
            </div>
            <div class="mb-3">
                <label asp-for="RecipientName" class="form-label">Tên người hưởng</label>
                <input asp-for="RecipientName" class="form-control" placeholder="VD: You" />
            </div>
            <div class="mb-3">
                <label asp-for="RecipientBank" class="form-label">Tên ngân hàng hưởng</label>
                <input asp-for="RecipientBank" class="form-control" placeholder="VD: Vietcombank" />
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Nội dung</label>
                <input asp-for="Description" class="form-control" placeholder="VD: Lương tháng 4" />
            </div>

            <div class="mb-3">
                <label class="form-label">Trạng thái</label>
                <select asp-for="Status"
                        asp-items="Model.Statuses"
                        class="form-control">
                    <option value="">-- Chọn trạng thái --</option>
                </select>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
            </div>



            @* Hidden Field*@
            <input asp-for="Categories" hidden />
            <input asp-for="TransactionTypeId" hidden />
            <input asp-for="TransactionTypeName" hidden />
            <input asp-for="CategoryName" hidden />
        </form>
    </div>
</div>

<!-- Render the Repayment Transactions Table -->
@await Html.PartialAsync("_RepaymentTransactionsTable", Model)

<!-- Modal for Adding Repayment Transaction -->
<div class="modal fade" id="addRepaymentModal" tabindex="-1" aria-labelledby="addRepaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRepaymentModalLabel">Thêm giao dịch hoàn trả</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addRepaymentForm" class="needs-validation" novalidate>
                    <input type="hidden" name="TransactionId" value="@Model.TransactionId" />
                    <div class="mb-3">
                        <label for="transactionTime" class="form-label">Thời gian giao dịch</label>
                        <div class="input-group">
                            <input id="transactionTime" name="TransactionTime" class="form-control datetimepicker-modal" required />
                            <span class="input-group-text">
                                <i class="bi bi-calendar"></i>
                            </span>
                        </div>
                        <div class="invalid-feedback">Vui lòng chọn thời gian giao dịch.</div>
                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Số tiền (VND)</label>
                        <input id="amount" name="Amount" class="form-control" type="number" step="1" required placeholder="VD: 500000" />
                        <div class="invalid-feedback">Vui lòng nhập số tiền.</div>
                    </div>
                    <div class="mb-3">
                        <label for="senderName" class="form-label">Người gửi</label>
                        <input id="senderName" name="SenderName" class="form-control" placeholder="VD: Nguyen Van A" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Nội dung</label>
                        <input id="description" name="Description" class="form-control" placeholder="VD: Hoàn trả tháng 4" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="RepaymentTransactions.submitRepaymentForm()">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- New Edit Modal -->
<div class="modal fade" id="editRepaymentModal" tabindex="-1" aria-labelledby="editRepaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editRepaymentModalLabel">Sửa giao dịch hoàn trả</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editRepaymentForm" class="needs-validation" novalidate>
                    <input type="hidden" id="editId" name="Id" />
                    <input type="hidden" name="TransactionId" value="@Model.TransactionId" />
                    <div class="mb-3">
                        <label for="editTransactionTime" class="form-label">Thời gian giao dịch</label>
                        <div class="input-group">
                            <input id="editTransactionTime" name="TransactionTime" class="form-control datetimepicker-modal" required />
                            <span class="input-group-text">
                                <i class="bi bi-calendar"></i>
                            </span>
                        </div>
                        <div class="invalid-feedback">Vui lòng chọn thời gian giao dịch.</div>
                    </div>
                    <div class="mb-3">
                        <label for="editAmount" class="form-label">Số tiền (VND)</label>
                        <input id="editAmount" name="Amount" class="form-control" type="number" step="1" required placeholder="VD: 500000" />
                        <div class="invalid-feedback">Vui lòng nhập số tiền.</div>
                    </div>
                    <div class="mb-3">
                        <label for="editSenderName" class="form-label">Người gửi</label>
                        <input id="editSenderName" name="SenderName" class="form-control" placeholder="VD: Nguyen Van A" />
                    </div>
                    <div class="mb-3">
                        <label for="editDescription" class="form-label">Nội dung</label>
                        <input id="editDescription" name="Description" class="form-control" placeholder="VD: Hoàn trả tháng 4" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="RepaymentTransactions.submitEditRepaymentForm()">Lưu</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <script src="~/js/utilities.js"></script>
    <script src="~/js/repayment-transactions.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Khởi tạo tiện ích
            Utilities.initializeFlatpickr();
            Utilities.initializeFormValidation();

            // Tải bảng giao dịch hoàn trả
            const transactionId = '@Model.TransactionId';
            RepaymentTransactions.fetchRepaymentTransactions(transactionId);
        })
    </script>
}
{
  "Scheduler": {
    "DefaultConnection": "Server=localhost;Database=PersonalFinanceDB;User Id=sa;Password=123456;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "Jobs": [
      {
        "JobName": "TransactionUpdateJobDB",
        "JobType": "DB",
        "CronSchedule": "0/30 * * * * ?", // Chạy mỗi 30 giây
        "ParametersJson": "{\"CredentialsPath\": \"Data/credentials.json\", \"TokenPath\": \"Data/token.json\", \"MaxResults\": 10}"
      },
      {
        "JobName": "TransactionUpdateJobAPI",
        "JobType": "API",
        "CronSchedule": "0 30 */2 * * ?",
        "ApiBaseUrl": "http://localhost:8000",
        "ParametersJson": "{\"CredentialsPath\": \"Data/credentials.json\", \"TokenPath\": \"Data/token.json\", \"MaxResults\": 10}"
      },
      {
        "JobName": "GenerateReportJob",
        "JobType": "API",
        "CronSchedule": "0 0 8 * * ?",
        "ApiBaseUrl": "http://localhost:8000",
        "ParametersJson": "{\"ReportType\": \"Monthly\", \"OutputPath\": \"Reports/monthly.pdf\"}"
      },
      {
        "JobName": "CleanOldTransactionsJob",
        "JobType": "DB",
        "CronSchedule": "0 0 2 * * ?",
        "ParametersJson": "{}" // Không cần tham số đặc biệt
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "PersonalFinanceManager": "Debug" // Rõ ràng cho namespace dự án
    }
  }
}